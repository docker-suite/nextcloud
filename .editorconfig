# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[Dockerfile]
trim_trailing_whitespace = false
insert_final_newline = false

[Makefile]
indent_style = tab
tab_width = 4

[**/tmp/{maria*}/**]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
